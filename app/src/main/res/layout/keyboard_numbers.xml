<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">
        <Button android:id="@+id/key_1" style="@style/KeyStyle" android:text="1" />
        <Button android:id="@+id/key_2" style="@style/KeyStyle" android:text="2" />
        <Button android:id="@+id/key_3" style="@style/KeyStyle" android:text="3" />
        <Button android:id="@+id/key_4" style="@style/KeyStyle" android:text="4" />
        <Button android:id="@+id/key_5" style="@style/KeyStyle" android:text="5" />
        <Button android:id="@+id/key_6" style="@style/KeyStyle" android:text="6" />
        <Button android:id="@+id/key_7" style="@style/KeyStyle" android:text="7" />
        <Button android:id="@+id/key_8" style="@style/KeyStyle" android:text="8" />
        <Button android:id="@+id/key_9" style="@style/KeyStyle" android:text="9" />
        <Button android:id="@+id/key_0" style="@style/KeyStyle" android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
        <Button android:id="@+id/key_at" style="@style/KeyStyle" android:text="@" />
        <Button android:id="@+id/key_hash" style="@style/KeyStyle" android:text="#" />
        <Button android:id="@+id/key_dollar" style="@style/KeyStyle" android:text="$" />
        <Button android:id="@+id/key_percent" style="@style/KeyStyle" android:text="%" />
        <Button android:id="@+id/key_amp" style="@style/KeyStyle" android:text="&amp;" />
        <Button android:id="@+id/key_minus" style="@style/KeyStyle" android:text="-" />
        <Button android:id="@+id/key_plus" style="@style/KeyStyle" android:text="+" />
        <Button android:id="@+id/key_lparen" style="@style/KeyStyle" android:text="(" />
        <Button android:id="@+id/key_rparen" style="@style/KeyStyle" android:text=")" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">
        <Button android:id="@+id/key_symbols" style="@style/SpecialKeyStyle" android:text="#+="
            android:layout_weight="1.5" />
        <Button android:id="@+id/key_asterisk" style="@style/KeyStyle" android:text="*" />
        <Button android:id="@+id/key_quote" style="@style/KeyStyle" android:text="&quot;" />
        <Button android:id="@+id/key_apos" style="@style/KeyStyle" android:text="'" />
        <Button android:id="@+id/key_colon" style="@style/KeyStyle" android:text=":" />
        <Button android:id="@+id/key_semicolon" style="@style/KeyStyle" android:text=";" />
        <Button android:id="@+id/key_excl" style="@style/KeyStyle" android:text="!" />
        <Button android:id="@+id/key_quest" style="@style/KeyStyle" android:text="?" />
        <ImageButton android:id="@+id/key_num_backspace"
            style="@style/SpecialKeyStyle"
            android:src="@drawable/ic_backspace"
            android:scaleType="center"
            android:layout_weight="1.5"
            android:contentDescription="Backspace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">
        <Button android:id="@+id/key_abc" style="@style/SpecialKeyStyle" android:text="ABC"
            android:layout_weight="1.5" />
        <Button android:id="@+id/key_num_comma" style="@style/KeyStyle" android:text="," />
        <Button android:id="@+id/key_num_space" style="@style/KeyStyle" android:text=""
            android:layout_weight="5" />
        <Button android:id="@+id/key_num_period" style="@style/KeyStyle" android:text="." />
        <ImageButton android:id="@+id/key_num_enter"
            style="@style/SpecialKeyStyle"
            android:src="@drawable/ic_enter"
            android:scaleType="center"
            android:layout_weight="1.5"
            android:contentDescription="Enter" />
    </LinearLayout>

</LinearLayout>
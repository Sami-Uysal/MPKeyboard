<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:background="#202020"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/btn_toggle_tools"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_chevron_right"
        android:padding="10dp"
        android:rotation="0"
        android:background="?android:selectableItemBackground"
        android:contentDescription="Toggle Tools" />

    <ViewFlipper
        android:id="@+id/smartbar_flipper"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out">

        <!-- Child 0: Suggestions -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_suggestions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="4dp" />

        <!-- Child 1: Tools Container -->
        <LinearLayout
            android:id="@+id/tools_strip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical|start">

            <!-- Clipboard Tool -->
            <ImageView
                android:id="@+id/tool_clipboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_tool_settings"
                android:tooltipText="Clipboard"
                android:background="?android:selectableItemBackground" />

            <!-- Translate Tool -->
            <ImageView
                android:id="@+id/tool_translate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_tool_translate"
                android:tooltipText="Translate"
                android:background="?android:selectableItemBackground" />

            <!-- Password Tool -->
            <ImageView
                android:id="@+id/tool_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_tool_password"
                android:tooltipText="Passwords"
                android:background="?android:selectableItemBackground" />

            <!-- Theme Tool -->
            <ImageView
                android:id="@+id/tool_theme"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_tool_theme"
                android:tooltipText="Themes"
                android:background="?android:selectableItemBackground" />

            <!-- Settings Tool -->
            <ImageView
                android:id="@+id/tool_settings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_tool_settings"
                android:tooltipText="Settings"
                android:background="?android:selectableItemBackground" />

        </LinearLayout>

    </ViewFlipper>

</LinearLayout>
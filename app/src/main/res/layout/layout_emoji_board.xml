<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">

    <!-- Top Control Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <!-- Emoji Icon (Static/Active Indicator) -->
        <ImageView
            android:id="@+id/icon_emoji_active"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_emoji_face"
            android:scaleType="centerInside"
            app:tint="#FFFFFF"
            android:contentDescription="Emoji" />

        <!-- GIF Button (Rounded, Small) -->
        <LinearLayout
            android:id="@+id/btn_open_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gif_button"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_gif"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Close Button (X) -->
        <ImageButton
            android:id="@+id/btn_close_emoji"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="?android:selectableItemBackgroundBorderless"
            app:tint="#8E8E93"
            android:scaleType="centerInside"
            android:contentDescription="Close" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2C2C2E" />

    <!-- Emoji Grid (Fills space) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_emojis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:clipToPadding="false" />

    <!-- Category Strip (Bottom) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_emoji_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:background="#00000000" />

</LinearLayout>